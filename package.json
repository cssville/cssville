{
  "name": "cssville",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf build",
    "build": "tsc",
    "generate": "node build/generate.js",
    "watch:build": "tsc --watch",
    "watch:nodemon": "nodemon -e * './build/index.js'",
    "watch:server": "lite-server -c lite-server-config.json",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css build/",
    "start": "npm-run-all clean build copy-files generate --parallel watch:build watch:nodemon watch:server --print-label"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cssville/cssville.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cssville/cssville/issues"
  },
  "homepage": "https://github.com/cssville/cssville#readme",
  "devDependencies": {
    "@types/node": "^16.6.2",
    "copyfiles": "^2.4.1",
    "lite-server": "^2.6.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
