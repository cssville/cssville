{
  "name": "cssville",
  "version": "0.0.4",
  "description": "",
  "main": "cssville.css",
  "style": "cssville.css",
  "files": [
    "LICENSE.md",
    "cssville.css"
  ],
  "scripts": {
    "clean": "rimraf build",
    "build": "tsc",
    "generate": "node build/generate.js",
    "watch:build": "tsc --watch",
    "watch:server": "lite-server -c lite-server-config.json",
    "copy-files": "copyfiles -u 1 src/**/*.html src/**/*.css src/**/*.svg src/**/*.ico src/CNAME build/",
    "copy-css": "copyfiles -u 1 build/cssville.css .",
    "copy-css-src": "copyfiles -u 1 build/cssville.css src/",
    "start": "npm-run-all clean build copy-files generate copy-css copy-css-src --parallel watch:build watch:server --print-label",
    "deploy-prepare": "npm-run-all clean build copy-files"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cssville/cssville.git"
  },
  "keywords": [],
  "author": "elv1s42",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cssville/cssville/issues"
  },
  "homepage": "https://github.com/cssville/cssville#readme",
  "devDependencies": {
    "@types/node": "^16.6.2",
    "copyfiles": "^2.4.1",
    "lite-server": "^2.6.1",
    "nodemon": "^2.0.12",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2"
  }
}
